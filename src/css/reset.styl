@import 'variables'

*, *::before, *::after {
  box-sizing inherit
}

html {
  box-sizing border-box;
  font-size $font-size-basic
  -webkit-text-size-adjust 100%
}

body {
  font-size $font-size-basic
  font-family: Lato, 'Helvetica Neue', Arial, Helvetica, sans-serif
  line-height (10 / 7) em
  color: $color-text;
  margin: 0
}

button {
  font-size 100%
  line-height 1.15
}

h1, h2, h3, h4, h5, h6 {
  font-weight normal
}

[data-v-app] {
  transition 0.8s filter ease

  .dimmed {
    transition-duration 0s
  }
}
