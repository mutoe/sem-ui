loading() {
  display inline-block
  position: relative
  cursor: default
  color: transparent
  transition: all 0 linear, opacity $default-duration $default-easing
  width: 1em

  &::before
  &::after {
    position absolute
    content ""
    top: 50%
    left: 50%
    margin $loader-margin
    height: $loader-size
    width $loader-size
    border-radius 500rem
    border .2em solid rgba(#000, .15)
  }

  &::after {
    animation spin .6s linear infinite
    border-color #fff transparent transparent
  }
}

size($size = "middle") {
  if $size == "mini" {
    font-size (1 - 1.5 / 7) rem
  } else if $size == "small" {
    font-size (1 - 0.75 / 7) rem
  } else if $size == "large" {
    font-size (1 + 2 / 7) rem
  } else if $size == "massive" {
    font-size (1 + 4 / 7) rem
  } else {
    font-size 1rem
  }
}
