// Colors
$color-text = var(--color-text, rgba(#000, 0.87))
$color-text-inverse = var(--color-text-inverse, #fff)
$color-primary = var(--color-primary, #2185d0)
$color-secondary = var(--color-secondary, #1b1c1d)

// Font size
$font-size-basic = var(--font-size-basic, 14px)

// Border
$border-color = var(--border-color, rgba(34,36,38,.15))
$border-radius = var(--border-radius, 4px)

// Animation
$default-duration = var(--default-duration, .1s)
$default-easing = var(--default-easing, ease)

$loader-size = var(--loader-size, (18/14)em)
$loader-offset = var(--loader-offset, "calc(%s / -2)" % $loader-size)
$loader-margin = var(--loader-margin, $loader-offset 0 0 $loader-offset)
