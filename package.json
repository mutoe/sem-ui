{
  "name": "@sem-ui/vue",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "simple-git-hooks",
    "start": "vite",
    "build": "vue-tsc && vite build",
    "serve": "vite preview"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/vue-fontawesome": "^3.0.3",
    "vue": "^3.3.4",
    "vue-router": "^4.2.2"
  },
  "devDependencies": {
    "@mutoe/eslint-config-preset-vue": "^3.5.1",
    "@types/node": "^20.3.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "eslint": "^8.42.0",
    "lint-staged": "^13.2.2",
    "simple-git-hooks": "^2.8.1",
    "stylus": "^0.59.0",
    "typescript": "^4.9.5",
    "vite": "^4.3.9",
    "vue-tsc": "^1.6.5"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@mutoe/eslint-config-preset-vue"
    ],
    "rules": {
      "max-lines": "off"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "pre-push": "pnpm exec vue-tsc"
  },
  "lint-staged": {
    "*.{vue,js,ts,json,html}": "eslint --fix"
  }
}
